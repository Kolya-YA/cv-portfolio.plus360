---
import ExtLinkSvg from "./ExtLinkSvg.astro";
const { links } = Astro.props;
---

<div>
    {links?.github && (
        <a href={links.github} target="_blank" rel="noopener noreferrer">
            <span>GitHub <ExtLinkSvg size="18" /></span>
        </a>
    )}
    {links?.preview && (
        <a href={links.preview} target="_blank" rel="noopener noreferrer">
            <span>Preview <ExtLinkSvg size="18" /></span>
        </a>
    )}
</div>

<style>
div {
    display: grid;
    gap: 1rem;

    a {
        display: grid;
        align-items: end;
        min-height: 100%;
        padding-block: .5rem;
        padding-inline: 1rem;
        font-size: 1.4rem;
        line-height: 1;
        text-decoration: none;
        color: currentColor;
        background-color: var(--clr-block-bg);
        border-radius: .2rem;
        transition: color 0.3s;

        &:hover,
        &:focus-visible {
            color: var(--clr-accent-400);
        }
    }
}
</style>